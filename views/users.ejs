<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col s12 m4 l2"><p> </p></div>
        <div class="col s12 m4 l8">
            <div class="searchContainer">
                <form action="/users" method="GET">
                    <div class="col-md-1 col-md-offset-1"><h5>Rechercher :</h5></div>
                    <select name="selection" class="browser-default">
                        <option id="username" name="username" value="username">Pseudo</option>
                        <option id="displayName" name="displayName" value="displayName">Nom - prénom</option>
                    </select>
                    <div class="col-md-4">
                        <input type="text" name="value" class="form-control" required placeholder="Critère"/>
                    </div>
                    <div class="col-md-2">
                        <input type="submit" class="btn btn-success" value="Rechercher"/>
                    </div>
                </form>
            </div>
        </div>
        <div class="col s12 m4 l2"><p></p></div>
    </div>

    <div class="row">
        <div class="col s12 m4 l2"><p></p></div>
        <div class="col s12 m4 l8">
            <p>
                <h3>
                    <%=nbUsers%>
                    <% if(nbUsers > 1){ %>
                    utilisateurs trouvés
                    <%}else{%>
                    utilisateur trouvé
                    <%}%>
                </h3>
            </p>
        </div>
        <div class="col s12 m4 l2"><p></p></div>
    </div>

    <div class="row">
        <div class="col s12 m4 l2"><p></p></div>
        <div class="col s12 m4 l8">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom - prénom</th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach(function(user) { %>
                <tr>
                    <td><a href="users/<%= user._id%>"><%= user.username%></a></td>
                    <td><%= user.displayName%></td>
                    <td>
                        <form method="POST" action="/friendasks">
                            <input style="display: none;" type="text" id="" name="id_asker" value="<%=user_in_run._id%>"><br/>
                            <input style="display: none;" type="text" id="" name="id_receiver" value="<%=user._id%>"><br/>
                            <input style="display: none;" type="text" id="" name="status" value="0">
                            <input  class="waves-effect waves-light btn" type="submit" value="Ad as friend"/>
                        </form>
                        <!-- good ! -->
                    </td>
                </tr>
                <% })%>
                </tbody>
            </table>
        </div>
        <div class="col s12 m4 l2"><p></p></div>
    </div>
</div>
<% include partials/footer %>